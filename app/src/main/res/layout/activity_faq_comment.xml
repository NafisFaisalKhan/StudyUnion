<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icebug.android.studyunion.FaqCommentActivity">

    <TextView
        android:id="@+id/faq_post_op"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"/>

    <ListView
        android:id="@+id/faq_comments"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/faq_post_op"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/faq_post_op"
        android:layout_toStartOf="@+id/post_comment_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:text="Post"
        android:id="@+id/post_comment_button"/>

</RelativeLayout>
